                <DockPanel>
                    <HeaderedContentControl 
                    DockPanel.Dock="Top"
                    Content="{Binding}"
                    ContentTemplate="{StaticResource SetUpShearPage1}"
                    Header="Set Up Processing"
                    Style="{StaticResource MainHeaderStyle}"
                    />
                </DockPanel>
        </Border>

